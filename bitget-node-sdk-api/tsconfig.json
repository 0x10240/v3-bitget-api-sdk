{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": "./",
    "target": "esnext",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "strict": true,
    "pretty": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}